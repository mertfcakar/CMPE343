<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="540.0" prefWidth="960.0" spacing="20.0"
    style="-fx-background-color: linear-gradient(to bottom right, #e8f5e9, #ffffff);"
    xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.group12.greengrocer.controllers.LoginController">

    <Label text="GreenGrocer" textFill="#2e7d32">
        <font>
            <Font name="Segoe UI Bold" size="48.0" />
        </font>
    </Label>

    <Label text="Fresh Market System" textFill="#555555">
        <font>
            <Font size="18.0" />
        </font>
    </Label>

    <VBox alignment="CENTER" maxWidth="350.0" spacing="15.0"
        style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">

        <Label style="-fx-font-weight: bold; -fx-text-fill: #333;" text="Sign In" />

        <TextField fx:id="usernameField" prefHeight="40.0" promptText="Username"
            style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;" />

        <!-- ŞİFRE ALANI DÜZELTİLDİ: StackPane eklendi -->
        <javafx.scene.layout.StackPane>
            <PasswordField fx:id="passwordField" prefHeight="40.0" promptText="Password"
                style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;" />
            <!-- Bu satır eksikti, bu yüzden hata alıyordun: -->
            <TextField fx:id="passwordTextField" managed="false" visible="false" prefHeight="40.0"
                promptText="Password"
                style="-fx-background-radius: 5; -fx-border-color: #ddd; -fx-border-radius: 5;" />
        </javafx.scene.layout.StackPane>

        <!-- Checkbox eklemeyi unutma -->
        <javafx.scene.control.CheckBox fx:id="showPasswordCheck"
            onAction="#handlePasswordVisibility" text="Show Password" />

        <Label fx:id="messageLabel" text="" wrapText="true" />

        <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="45.0" prefWidth="300.0"
            style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 5;"
            text="LOGIN" />

        <HBox alignment="CENTER" spacing="20.0">
            <Hyperlink onAction="#switchToForgotPassword" text="Forgot Password?" textFill="#7f8c8d" />
        </HBox>
    </VBox>

    <HBox alignment="CENTER" spacing="5.0">
        <Label text="Don't have an account?" textFill="#555" />
        <Button onAction="#switchToRegister"
            style="-fx-background-color: transparent; -fx-text-fill: #2e7d32; -fx-font-weight: bold; -fx-cursor: hand; -fx-underline: true;"
            text="Register Now" />
    </HBox>

</VBox>