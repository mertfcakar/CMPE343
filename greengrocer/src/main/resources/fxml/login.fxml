<!-- BOYUT GÃœNCELLENDÄ°: 1280x800 -->
<StackPane prefHeight="800.0" prefWidth="1280.0"
    style="-fx-background-color: linear-gradient(to bottom right, #667eea 0%, #764ba2 100%);"
    xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.group12.greengrocer.controllers.LoginController">

    <!-- ANA LOGIN PANELI (DAÄ°RELER SÄ°LÄ°NDÄ°) -->
    <VBox alignment="CENTER" spacing="30.0" fx:id="mainContainer"
        style="-fx-background-color: rgba(255,255,255,0.98); -fx-background-radius: 20; -fx-padding: 50; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 30, 0, 0, 15);">

        <!-- LOGO VE BAÅžLIK -->
        <VBox alignment="CENTER" spacing="10.0">
            <ImageView fx:id="logoImage" fitHeight="100" fitWidth="100" preserveRatio="true">
                <Image url="@../images/logo.png" />
            </ImageView>

            <Label text="ðŸŒ¿ GreenGrocer" textFill="#2e7d32" fx:id="titleLabel">
                <font>
                    <Font name="Segoe UI Bold" size="48.0" />
                </font>
            </Label>

            <Label text="Fresh â€¢ Quality â€¢ Fast Delivery" textFill="#666666" fx:id="subtitleLabel">
                <font>
                    <Font name="Segoe UI" size="18.0" />
                </font>
            </Label>
        </VBox>

        <!-- LOGIN FORM -->
        <VBox alignment="CENTER" spacing="20.0" maxWidth="450.0">

            <Label style="-fx-font-weight: bold; -fx-text-fill: #333; -fx-font-size: 28px;"
                text="Welcome Back!" />

            <!-- USERNAME FIELD -->
            <VBox spacing="5.0" alignment="CENTER_LEFT">
                <Label text="Username"
                    style="-fx-text-fill: #555; -fx-font-weight: bold; -fx-font-size: 14px;" />
                <TextField fx:id="usernameField" prefHeight="55.0" prefWidth="400.0"
                    promptText="Enter your username"
                    style="-fx-background-radius: 25; -fx-border-color: #ddd; -fx-border-radius: 25; -fx-padding: 0 25; -fx-font-size: 16px;" />
            </VBox>

            <!-- PASSWORD FIELD -->
            <VBox spacing="5.0" alignment="CENTER_LEFT">
                <Label text="Password"
                    style="-fx-text-fill: #555; -fx-font-weight: bold; -fx-font-size: 14px;" />
                <StackPane>
                    <PasswordField fx:id="passwordField" prefHeight="55.0" prefWidth="400.0"
                        promptText="Enter your password"
                        style="-fx-background-radius: 25; -fx-border-color: #ddd; -fx-border-radius: 25; -fx-padding: 0 25; -fx-font-size: 16px;" />
                    <TextField fx:id="passwordTextField" managed="false" visible="false"
                        prefHeight="55.0" prefWidth="400.0"
                        promptText="Enter your password"
                        style="-fx-background-radius: 25; -fx-border-color: #ddd; -fx-border-radius: 25; -fx-padding: 0 25; -fx-font-size: 16px;" />
                </StackPane>
            </VBox>

            <!-- SHOW PASSWORD CHECKBOX -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <CheckBox fx:id="showPasswordCheck" onAction="#handlePasswordVisibility" />
                <Label text="Show Password" style="-fx-text-fill: #666; -fx-font-size: 14px;" />
            </HBox>

            <!-- MESSAGE LABEL -->
            <Label fx:id="messageLabel" text="" wrapText="true" textFill="RED"
                style="-fx-font-size: 14px;" />

            <!-- LOGIN BUTTON -->
            <Button fx:id="loginButton" onAction="#handleLogin" prefHeight="60.0" prefWidth="400.0"
                style="-fx-background-color: linear-gradient(to right, #4CAF50, #45a049); -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18px; -fx-background-radius: 30; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(76,175,80,0.3), 5, 0, 0, 0);"
                text="ðŸš€ LOGIN" />

            <!-- LOADING INDICATOR -->
            <ProgressIndicator fx:id="loadingIndicator" prefWidth="40" prefHeight="40"
                visible="false" style="-fx-progress-color: #4CAF50;" />
            <HBox alignment="CENTER" spacing="20.0">
                <Hyperlink onAction="#switchToForgotPassword" text="Forgot Password?"
                    textFill="#7f8c8d" style="-fx-font-size: 14px;" />
            </HBox>
        </VBox>

        <!-- REGISTER LINK -->
        <HBox alignment="CENTER" spacing="5.0">
            <Label text="Don't have an account?" textFill="#555" style="-fx-font-size: 14px;" />
            <Button onAction="#switchToRegister"
                style="-fx-background-color: transparent; -fx-text-fill: #4CAF50; -fx-font-weight: bold; -fx-cursor: hand; -fx-underline: true; -fx-font-size: 14px;"
                text="Register Now" />
        </HBox>

        <!-- FOOTER -->
        <Label text="Â© 2026 GreenGrocer - Fresh Market System" textFill="#999"
            style="-fx-font-size: 13px;" />

    </VBox>

</StackPane>