<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="540.0" prefWidth="960.0" spacing="20.0" 
      style="-fx-background-color: linear-gradient(to bottom right, #fff3e0, #ffffff);" 
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.group12.greengrocer.controllers.ForgotPasswordController">

    <Label text="Reset Password" textFill="#e67e22">
        <font>
            <Font name="Segoe UI Bold" size="32.0" />
        </font>
    </Label>
    
    <Label text="Verify your identity to set a new password" textFill="#7f8c8d" />

    <VBox maxWidth="350.0" spacing="15.0" 
          style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        
        <TextField fx:id="usernameField" prefHeight="40.0" promptText="Username" style="-fx-background-radius: 5;" />
        <TextField fx:id="emailField" prefHeight="40.0" promptText="Registered Email" style="-fx-background-radius: 5;" />
        <TextField fx:id="phoneField" prefHeight="40.0" promptText="Registered Phone" style="-fx-background-radius: 5;" />
        
        <PasswordField fx:id="newPasswordField" prefHeight="40.0" promptText="New Password" style="-fx-background-radius: 5; -fx-border-color: #e67e22;" />

        <Label fx:id="statusLabel" wrapText="true" alignment="CENTER" maxWidth="Infinity"/>

        <Button onAction="#handleResetPassword" text="RESET PASSWORD" prefHeight="45.0" maxWidth="Infinity" 
                style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 5;" />
        
        <!-- DEĞİŞİKLİK BURADA: Cancel yerine Ana Menüye Dön -->
        <Button onAction="#switchToLogin" text="Back to Login Menu" prefHeight="30.0" maxWidth="Infinity" 
                style="-fx-background-color: transparent; -fx-text-fill: #7f8c8d; -fx-cursor: hand;" />
    </VBox>
</VBox>