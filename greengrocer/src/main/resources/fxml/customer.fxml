<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.group12.greengrocer.controllers.CustomerController"
    prefWidth="1200" prefHeight="800" style="-fx-background-color: #f4f6f8;">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #2e7d32; -fx-padding: 15 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 2);">
