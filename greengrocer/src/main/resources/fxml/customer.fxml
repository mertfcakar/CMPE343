                <Label text="MY CART" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
                <Label fx:id="cartItemsLabel" text="0 items" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1b5e20;"/>
                <Button text="View Cart &amp; Checkout" onAction="#handleViewCart" maxWidth="Infinity" 
                        style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 20; -fx-cursor: hand; -fx-padding: 10;"/>
            </VBox>

            <Separator />

            <VBox spacing="5" style="-fx-padding: 10;">
                <Button text="ðŸ   Browse Products" onAction="#handleBrowseProducts" maxWidth="Infinity" alignment="BASELINE_LEFT"
                        style="-fx-background-color: transparent; -fx-padding: 12; -fx-font-size: 14px; -fx-cursor: hand; -fx-text-fill: #333;"/>
                
                <Button text="ðŸ“¦  My Orders" onAction="#handleViewOrders" maxWidth="Infinity" alignment="BASELINE_LEFT"
