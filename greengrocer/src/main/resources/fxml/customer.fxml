                <Button text="âœ‰ï¸  Message Owner" onAction="#handleSendMessage" maxWidth="Infinity" alignment="BASELINE_LEFT"
                        style="-fx-background-color: transparent; -fx-padding: 12; -fx-font-size: 14px; -fx-cursor: hand; -fx-text-fill: #333;"/>
                
                <Button text="ðŸ‘¤  Edit Profile" onAction="#handleEditProfile" maxWidth="Infinity" alignment="BASELINE_LEFT"
                        style="-fx-background-color: transparent; -fx-padding: 12; -fx-font-size: 14px; -fx-cursor: hand; -fx-text-fill: #333;"/>
            </VBox>
        </VBox>
    </left>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent;" vbarPolicy="AS_NEEDED">
            <VBox spacing="30" style="-fx-padding: 30;">
                
                <VBox spacing="15">
                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="ðŸ¥¬ Fresh Vegetables" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #37474f;"/>
                        <Separator HBox.hgrow="ALWAYS"/>
                    </HBox>
                    <FlowPane fx:id="vegetablesFlowPane" hgap="20" vgap="20" prefWrapLength="800" />
                </VBox>

