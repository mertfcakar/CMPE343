<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.group12.greengrocer.controllers.ShoppingCartController"
            prefWidth="900" prefHeight="650" style="-fx-background-color: #f4f6f8;">
    
    <top>
        <HBox style="-fx-background-color: white; -fx-padding: 15 30; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 2);">
            <Label text="Shopping Cart" style="-fx-text-fill: #333; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS" />
            <Button text="Continue Shopping" onAction="#handleContinueShopping" style="-fx-background-color: transparent; -fx-text-fill: #2e7d32; -fx-font-weight: bold; -fx-cursor: hand;"/>
        </HBox>
    </top>
    
    <center>
        <SplitPane dividerPositions="0.65" style="-fx-background-color: transparent; -fx-padding: 20;">
            
            <VBox spacing="15">
                <Label text="My Items" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #555;"/>
                <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS" hbarPolicy="NEVER">
                    <VBox fx:id="cartItemsContainer" spacing="10" style="-fx-background-color: #f4f6f8;"/>
                </ScrollPane>
                <HBox alignment="CENTER_RIGHT">
                    <Button text="Clear Cart" onAction="#handleClearCart" style="-fx-text-fill: #d32f2f; -fx-background-color: transparent; -fx-cursor: hand;"/>
                </HBox>
            </VBox>
            
            <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 0);">
                <Label text="Order Summary" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <Separator/>
                
                <VBox spacing="5">
                    <Label text="Discount Code" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                    <HBox spacing="5">
                        <TextField fx:id="couponField" promptText="Enter Code" HBox.hgrow="ALWAYS" style="-fx-background-radius: 5;"/>
                        <Button text="Apply" onAction="#handleApplyCoupon" style="-fx-background-color: #333; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;"/>
                    </HBox>
                    <Label fx:id="couponMessageLabel" style="-fx-font-size: 11px;"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Delivery Date" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                    <DatePicker fx:id="deliveryDatePicker" maxWidth="Infinity"/>
                    <ComboBox fx:id="deliveryTimeCombo" promptText="Select Time Slot" maxWidth="Infinity"/>
                </VBox>
                
                <!-- YENİ: ÖDEME YÖNTEMİ -->
                <VBox spacing="5">
                    <Label text="Payment Method" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                    <RadioButton fx:id="rbCreditCard" text="Credit Card (Online Payment)"/>
                    <RadioButton fx:id="rbCash" text="Cash on Delivery"/>
                </VBox>
                
                <Separator/>
                
                <GridPane vgap="10" hgap="10">
                    <Label text="Subtotal" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-text-fill: #666;"/>
                    <Label fx:id="subtotalLabel" text="0.00 TL" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-weight: bold;" GridPane.halignment="RIGHT"/>
                    
                    <Label text="VAT (18%)" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-text-fill: #666;"/>
                    <Label fx:id="vatLabel" text="0.00 TL" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-weight: bold;" GridPane.halignment="RIGHT"/>
                    
                    <Label text="Discount" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-text-fill: #2e7d32;"/>
                    <Label fx:id="discountLabel" text="-0.00 TL" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-text-fill: #2e7d32; -fx-font-weight: bold;" GridPane.halignment="RIGHT"/>
                    
                    <Separator GridPane.columnSpan="2" GridPane.rowIndex="3"/>
                    
                    <Label text="TOTAL" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label fx:id="totalLabel" text="0.00 TL" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;" GridPane.halignment="RIGHT"/>
                </GridPane>
                
                <Region VBox.vgrow="ALWAYS"/>
                
                <Button text="CHECKOUT" onAction="#handleCheckout" maxWidth="Infinity" 
                        style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12; -fx-background-radius: 5; -fx-cursor: hand;"/>
                <Label fx:id="checkoutMessageLabel" text="" wrapText="true" style="-fx-text-fill: red; -fx-font-size: 11px;" alignment="CENTER" maxWidth="Infinity"/>
            </VBox>
            
        </SplitPane>
    </center>
</BorderPane>