<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.group12.greengrocer.controllers.ShoppingCartController"
            prefWidth="700" prefHeight="600" style="-fx-background-color: #f5f5f5;">
    
    <!-- TOP: Header -->
    <top>
        <VBox style="-fx-background-color: #2e7d32; -fx-padding: 15;">
            <Label text="Shopping Cart" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
        </VBox>
    </top>
    
    <!-- CENTER: Cart items -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            
            <!-- Cart Items Table -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1;" VBox.vgrow="ALWAYS">
                <Label text="Items in Cart" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Separator/>
                <TableView fx:id="cartItemsTable" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Product Name" prefWidth="200"/>
                        <TableColumn text="Quantity (kg)" prefWidth="100"/>
                        <TableColumn text="Unit Price" prefWidth="100"/>
                        <TableColumn text="Total Price" prefWidth="100"/>
                        <TableColumn text="Action" prefWidth="100"/>
                    </columns>
                </TableView>
                <HBox spacing="10">
                    <Button text="Remove Selected" onAction="#handleRemoveItem" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
                    <Button text="Update Quantity" onAction="#handleUpdateQuantity"/>
                    <Button text="Clear Cart" onAction="#handleClearCart"/>
                </HBox>
            </VBox>
            
            <!-- Order Summary -->
            <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                <Label text="Order Summary" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Separator/>
                <GridPane hgap="20" vgap="8">
                    <Label text="Subtotal:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-size: 14px;"/>
                    <Label fx:id="subtotalLabel" text="TL 0.00" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-size: 14px;"/>
                    
                    <Label text="VAT (18 percent):" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-font-size: 14px;"/>
                    <Label fx:id="vatLabel" text="TL 0.00" GridPane.columnIndex="1" GridPane.rowIndex="1" style="-fx-font-size: 14px;"/>
                    
                    <Label text="Discount:" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-size: 14px; -fx-text-fill: green;"/>
                    <Label fx:id="discountLabel" text="-TL 0.00" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-font-size: 14px; -fx-text-fill: green;"/>
                    
                    <Separator GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
                    
                    <Label text="TOTAL:" GridPane.columnIndex="0" GridPane.rowIndex="4" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                    <Label fx:id="totalLabel" text="TL 0.00" GridPane.columnIndex="1" GridPane.rowIndex="4" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"/>
                </GridPane>
            </VBox>
            
            <!-- Coupon and Delivery -->
            <HBox spacing="15">
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1;" HBox.hgrow="ALWAYS">
                    <Label text="Apply Coupon" style="-fx-font-weight: bold;"/>
                    <HBox spacing="10">
                        <TextField fx:id="couponField" promptText="Enter coupon code" HBox.hgrow="ALWAYS"/>
                        <Button text="Apply" onAction="#handleApplyCoupon" style="-fx-background-color: #4caf50; -fx-text-fill: white;"/>
                    </HBox>
                    <Label fx:id="couponMessageLabel" text="" style="-fx-font-size: 11px;"/>
                </VBox>
                
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #e0e0e0; -fx-border-width: 1;" HBox.hgrow="ALWAYS">
                    <Label text="Delivery Date and Time" style="-fx-font-weight: bold;"/>
                    <DatePicker fx:id="deliveryDatePicker" promptText="Select date (within 48hrs)"/>
                    <ComboBox fx:id="deliveryTimeCombo" promptText="Select time" maxWidth="Infinity"/>
                </VBox>
            </HBox>
            
        </VBox>
    </center>
    
    <!-- BOTTOM: Action buttons -->
    <bottom>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0;">
            <HBox spacing="10" alignment="CENTER">
                <Button text="Continue Shopping" onAction="#handleContinueShopping" prefWidth="200"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Checkout" onAction="#handleCheckout" prefWidth="200"
                        style="-fx-background-color: #2e7d32; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
            </HBox>
            <Label fx:id="checkoutMessageLabel" text="" style="-fx-font-size: 12px; -fx-text-fill: red;"/>
        </VBox>
    </bottom>
    
</BorderPane>